{
  "extends": "astro/tsconfigs/strict",
  "verbatimModuleSyntax": true,
  "compilerOptions": {
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@data/*": ["src/data/*"],
      "@domain/*": ["src/domain/*"],
      "@ui/*": ["src/ui/*"]
    }
  }
}
